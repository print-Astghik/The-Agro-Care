<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#FAFAFA">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Up Reminder"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:layout_marginBottom="24dp" />

    <!-- Display selected date and time -->
    <TextView
        android:id="@+id/selected_datetime_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected date and time: "
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="16dp" />

    <!-- Pick Time Button -->
    <Button
        android:text="⏰ Pick Time"
        android:onClick="pickTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:padding="12dp" />

    <!-- Pick Date Button -->
    <Button
        android:text="📅 Pick Date"
        android:onClick="pickDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:padding="12dp" />

    <!-- Enter interval in days -->
    <EditText
        android:id="@+id/interval_days_edit_text"
        android:hint="Repeat every N days"
        android:textSize="18sp"
        android:inputType="number"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Create Notification Button -->
    <Button
        android:text="✅ Create Notification"
        android:onClick="createNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Stop Notification Button -->
    <Button
        android:text="🛑 Stop Notification"
        android:onClick="stopNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F44336"
        android:textColor="#FFFFFF"
        android:padding="12dp" />

    <!-- Notification status display -->
    <TextView
        android:id="@+id/notification_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification is OFF"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginTop="24dp" />

</LinearLayout>
